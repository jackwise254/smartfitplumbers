mixin Navbar
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-3(data-navbar-on-scroll)
    .container
      a.navbar-brand(href='index.html')
        span.text-secondary.fs-3.ms-2.fw-bolder.smartfit-bg SmartFit
        span.text-danger.fs-3.ms-2.fw-bolder Plumbers
      button.navbar-toggler.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon


      #navbarSupportedContent.collapse.navbar-collapse.pt-4.pt-lg-0
        p.mb-0.ms-auto.text-light.fs-0.fw-normal
          i.fas.fa-phone-alt.me-2
          | Call Us Now 
          a(href='tel:+254-718-816070').text-light (+254) 7188 160 70
            
        ul.navbar-nav.ms-auto.border-bottom.border-lg-bottom-0.pt-2.pt-lg-0
          li.nav-item.px-2
            a.nav-link.active(aria-current='page', href='#' class= currentPage === 'index' ? 'active' : false ) Home
          li.nav-item.px-2
            a.nav-link(href='#products') Projects
          li.nav-item.px-2
            a.nav-link(href='#news') Services
          li.nav-item.px-2
            a.nav-link(href='#contact') Contact us
          
             